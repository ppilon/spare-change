<div class="row">
  <div class="col-md-12">
    <h2> My Profile </h2>
  </div>
</div>
<form id="user-profile-form">
  <input type="hidden" value="{{user.user_profile.id}}" name="user[user_profile_attributes][id]">
  <div class="row pad-top">
    <div class="col-md-6">
      <label> First Name </label>
      <input type="text" value="{{user.user_profile.first_name}}" name="user[user_profile_attributes][first_name]" class="form-control">
    </div>
    <div class="col-md-6">
      <label> Last Name </label>
      <input type="text" value="{{user.user_profile.last_name}}" name="user[user_profile_attributes][last_name]" class="form-control">
    </div>
  </div>
  <div class="row pad-top">
    <div class="col-md-12">
      <label> Email Address </label>
      <input type="text" value="{{user.email}}" name="credentials[email]" class="form-control">
    </div>
  </div>
  <div class="row pad-top">
    <div class="col-md-6">
      <label> Username </label>
      <input type="text" value="{{user.user_profile.username}}" name="credentials[user_profile_attributes][username]" class="form-control">
    </div>
    <div class="col-md-6">
      <label> Phone Number </label>
      <input type="text" value="{{user.user_profile.phone_number}}" name="credentials[user_profile_attributes][phone_number]" class="form-control">
    </div>
  </div>
  <div class="row pad-top">
    <div class="col-md-12">
      <input type="submit" class="btn btn-primary edit-profile-btn" value="Update Profile">
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 pad-top" id="update-user-notification">
      <div class="notification-area"> </div>
    </div>
  </div>
</form>
