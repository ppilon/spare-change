{{#each jobs as |job|}}
    <tr>
      <td> {{job.id}} </td>
      <td>{{job.pickup_address}}</td>
      <td> {{job.dropoff_address}} </td>
      <td> {{#convertDateReadable job.due_date}} {{/convertDateReadable}} </td>
      <td> {{job.instructions}} </td>
      <td> {{#addDollarSign job.cost}} {{/addDollarSign}}</td>
      <td> <button class="btn btn-default edit-job"> Edit </button> </td>
      <td> <button class="btn btn-danger delete-job"> Delete </button> </td>
    </tr>
  {{/each}}
